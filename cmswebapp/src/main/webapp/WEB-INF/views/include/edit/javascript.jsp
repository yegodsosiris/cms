		$(function() {
			
			$('.validSubmit').click(function() {
				if ($('#key').val()=='') {
					$('#keyError').html('Key cannot be empty');
					$('#keyError').show();
					return false;
				}
				return true;
			});
			
			$('#key').focus(function() {
				$('#keyError').hide();
				$('#keyError').html('');
			});
			
			$('input[type=file]').change(function(e){
				$in=$(this);
				// strip off file extension
				var filename = $in.val().split('.')[0].toLowerCase();
				// Chrome includes c:\fakepath\ with the name. We should strip this off.
				if (filename.indexOf('\\') != -1) {
					f_a = filename.split('\\');
					filename = f_a[f_a.length-1];
				}
				// if filename has spaces then do not use as key.
				if (filename.indexOf(' ') == -1) {
					$('#key').val(filename);
				}
			});
			
